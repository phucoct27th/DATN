@model MutiShopDataContext.Model.QuanLiKho

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/View.cshtml";
}

    <div class="wrapper">
        @{Html.RenderAction("MainHeader", "Home"); }
        @{Html.RenderAction("Menu", "Home"); }
        <div class="content-wrapper" style="min-height: 53.7361px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-primary">Quản lí kho</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="control-label col-md-2">ID kho</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IdKho", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdKho, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">ID sản phẩm</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IdSanPham", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdSanPham, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Người nhập</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NguoiNhap, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NguoiNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày nhập</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Số lượng</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Người sửa</label>
                        <div class="col-md-10">
                            @Html.DropDownList("NguoiSua", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NguoiSua, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày sửa</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgaySua, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgaySua, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Người thêm</label>
                        <div class="col-md-10">
                            @Html.DropDownList("NguoiThem", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NguoiThem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày thêm</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayThem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayThem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>


        @{Html.RenderAction("Menu", "Home"); }
    </div>




